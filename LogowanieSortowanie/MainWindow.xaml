<Window x:Class="LogowanieSortowanie.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LogowanieSortowanie"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Border Background="#2c3e50" CornerRadius="20" Margin="20">

        <StackPanel>
            <Label Content="Logowanie" Foreground="White" FontSize="25" HorizontalAlignment="Center"/>
            <Separator></Separator>
            <Label Content="Login" Foreground="White" FontSize="25"/>
            <TextBox Name="login" Background="#1abc9c" Foreground="White" FontSize="18"/>
            <Label Content="Hasło" Foreground="White" FontSize="25" />
            <PasswordBox  Name="password" Background="#1abc9c" Foreground="White" FontSize="18" />
            <Button Name="btnSubmit" Content="Zaloguj" Margin="60" Background="#1abc9c" Foreground="White" FontSize="18" Click="BtnSubmit_OnClick"/>


        </StackPanel>

    </Border>
</Window>
